{
    "cSpell.words": [
        "Lizhi",
        "Ximalaya"
    ],
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "html.validate.scripts": false,
    "scss.validate": false,
    "css.validate": false,
    "html.validate.styles": false,
    "liquid.format": true,
    "[html]": {
        "editor.defaultFormatter": "sissel.shopify-liquid",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "never"
        }
    },
    "ruby.lint": {
        "rubocop": {
            "forceExclusion": true,
        }
    },
}